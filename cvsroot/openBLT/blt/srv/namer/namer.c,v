int 
_namer_read(token_t token, uint32 type, uint32 *size, void *data)
d54 6
a59 53
	nnode *n = resolve(token);
	DEBUG("namer: read(%d,%x,%d,...)",token,type,*size);
	if(!n) return -1;
	if(type == TYPE_NAME){
		int len = strlen(n->name) + 1;
		if(len > *size) return -1;
		memcpy(data,n->name,len);
		*size = n;
		return 0;
