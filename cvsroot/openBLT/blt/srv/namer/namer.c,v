int 
_namer_write(token_t token, uint32 type, uint32 size, void *data)
{
	nnode *n = resolve(token);
	DEBUG("namer: write(%d,%x,%d,...)",token,type,size);
	if(!n || (n->type == TYPE_DIRECTORY)) return -1;
	if(n->size) free(n->data);
	n->size = size;
	if(size){
		n->data = malloc(size);
		memcpy(n->data,data,size);
	} else {
		n->data = NULL;
	}
	return 0;
