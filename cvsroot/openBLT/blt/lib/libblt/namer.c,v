int 
do_request(int opcode, token_t token, uint32 type, const void *data, int size)
d42 1
a42 22
	msg_hdr_t mh;
	
	if(size > MAXMSGDATA) return -1;
	
	nreq->opcode = opcode;
	nreq->token = token;
	nreq->size = size;
	nreq->type = type;
	if(size && data) memcpy(nreq->data,data,size);

