a48 12
	CHECK(TOKEN_NONE);	
	
	LOCK();
	if(do_request(OP_WALK, token, 0, name, strlen(name)+1) != HDRSIZE) {
		token = TOKEN_NONE;
	} else {
		token = nreq->token;
