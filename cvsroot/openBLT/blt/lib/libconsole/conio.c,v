void con_puts(char *s)
{
    while(*s){
        if(*s == '\n'){
            s++;
            goto roll1;
        }
        *posn++ = *s++;
        *posn++ = attr;
        px++;
        if(px == 80){
          roll1:
            px = 0;
            if(py == 24)
                scrollup();
            else
                py++;
            posn = screen + (py*80+px)*2;
        }
    }
}
