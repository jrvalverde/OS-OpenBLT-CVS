void reaper(void)
{
	task_t *task;
	
	asm("cli");	/* XXX race condition? */
	for(;;){
		sem_acquire(reaper_sem);
		task = rsrc_dequeue(reaper_queue);		
		kprintf("reaper reclaiming thread #%d (%s)",task->rsrc.id,task->rsrc.name);
		task_destroy(task);
	}
	
}

